<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.jwebmp.guicedee.servlets</groupId>
        <artifactId>servlets-parent</artifactId>
        <version>0.0.0_0-SNAPSHOT</version>
    </parent>

    <artifactId>guiced-web-services</artifactId>
    <packaging>jar</packaging>

    <name>Guiced Web Services</name>
    <description>An integration library for Metro WS into the Guiced framework
    </description>
    <url>https://github.com/GedMarc/GuicedWebServices</url>

    <dependencies>
        <dependency>
            <groupId>com.jwebmp.guicedee.servlets</groupId>
            <artifactId>guiced-servlets</artifactId>
            <type>jar</type>
        </dependency>

       <dependency>
            <groupId>com.jwebmp.thirdparty</groupId>
            <artifactId>jakarta.activation</artifactId>
            <type>jar</type>
        </dependency>


        <dependency>
            <groupId>com.jwebmp.thirdparty</groupId>
            <artifactId>javax.activation</artifactId>
            <type>jar</type>
        </dependency>


        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <type>jar</type>
        </dependency>
<!--

        <dependency>
            <groupId>org.glassfish.metro</groupId>
            <artifactId>webservices-rt</artifactId>
            <type>jar</type>
        </dependency>
-->

